const {nombre,src} = Astro.props
---
<a href=`/skills/${nombre}` class="skill">
    <div class="top-skill">
        <h2>{nombre.toUpperCase()}</h2>
        <img src={src} alt="">
    </div>
</a>
<style>
    .skill{
        background: linear-gradient(45deg, #88888810,#ffffff20);
        width: 200px;
        padding: 10px 15px;
        height: fit-content;
        border-radius: 10px;
        border: 2px solid var(--skill-border);
        transition: all 200ms ease;
        text-decoration: none;
        color: var(--skill-color);
    }
    .skill:hover{
        background: var(--skill-hover-bg);
        border: 2px solid var(--skill-hover-border);
        color: var(--skill-hover-color);
    }
    .top-skill{
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .top-skill > h2{
        font-size: 1rem;
    }
    img{
        height: 60px;
        width: 60px;
        border-radius: 10px;
        padding: 4px;
        box-shadow: #33333380 1px 1px 4px;
    }
</style>
